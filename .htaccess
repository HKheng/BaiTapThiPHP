# Bật tính năng Rewrite Engine
RewriteEngine On

# Chuyển hướng tất cả các yêu cầu vào index.php (trừ các tệp và thư mục thực)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)$ /public/index.php?url=$1 [QSA,L]

# Chặn truy cập trực tiếp vào thư mục nhạy cảm
<FilesMatch "(database.php|Admin.php|config.php)">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Bật hiển thị lỗi trong quá trình phát triển
php_flag display_errors on
php_flag log_errors on
php_value error_log logs/php_errors.log
